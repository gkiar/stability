{
    "name": "pyAFQ",
    "tool-version": "0.1.1",
    "description": "Automated Fiber Quantification ... in Python",
    "command-line": "pyAFQ [CONFIG_FILE]",
    "schema-version": "0.5",
    "container-image": {
        "type": "docker",
        "image": "boutiques/examples"
    },
    "groups":[
    {
        "id": "bundles_group",
        "name": "Bundles Group",
        "description": "Parameters related to bundles of interest.",
        "members": ["bundles", "seg_algo", "scalars_model", "scalars"]
    },
    {
        "id": "tracking_group",
        "name": "Tracking Group",
        "description": "Parameters related to streamline tracking.",
        "members": ["directions", "max_angle", "sphere", "seed_mask", "n_seeds",
                    "random_seeds", "stop_mask", "stop_threshold", "step_size",
                    "min_length", "max_length", "odf_model", "wm_labels"]
    }
    ],
    "inputs": [
    {
        "id": "dmriprep_path",
        "name": "dmriprep path",
        "type": "String",
        "value-key": "[DMRIPREP_PATH]",
        "optional": false
    },
    {
        "id": "bundles",
        "name": "bundles",
        "type": "String",
        "list": true,
        "min-list-entries": 1,
        "list-separator": "', '",
        "value-key": "[BUNDLES]",
        "value-choices": ["ATR", "CGC", "CST", "HCC", "IFO", "ILF",
                          "SLF", "ARC", "UNC", "FA", "FP"],
        "default-value": ["ATR", "CGC", "CST", "HCC", "IFO", "ILF",
                          "SLF", "ARC", "UNC", "FA", "FP"],
        "optional": true
    },
    {
        "id": "seg_algo",
        "name": "segmentation algorithm",
        "type": "String",
        "value-key": "[SEG_ALGO]",
        "value-choices": ["AFQ"],
        "default-value": "AFQ",
        "optional": true
    },
    {
        "id": "scalars_model",
        "name": "scalars model",
        "type": "String",
        "value-key": "[SCALARS_MODEL]",
        "value-choices": ["DTI"],
        "default-value": "DTI",
        "optional": true
    },
    {
        "id": "scalars",
        "name": "scalars",
        "type": "String",
        "list": true,
        "min-list-entries": 1,
        "list-separator": "', '",
        "value-key": "[SCALARS]",
        "value-choices": ["dti_fa", "dti_md"],
        "default-value": ["dti_fa", "dti_md"],
        "optional": true
    },
    {
        "id": "directions",
        "name": "directions",
        "type": "String",
        "value-key": "[DIRECTIONS]",
        "value-choices": ["det", "prob"],
        "default-value": "det",
        "optional": true
    },
    {
        "id": "max_angle",
        "name": "max angle",
        "type": "Number",
        "value-key": "[MAX_ANGLE]",
        "minimum": 0.0,
        "maximum": 180.0,
        "default-value": 30.0,
        "optional": true
    },
    {
        "id": "sphere",
        "name": "sphere",
        "type": "String",
        "value-key": "[SPHERE]",
        "default-value": "None",
        "optional": true
    },
    {
        "id": "seed_mask",
        "name": "seed mask",
        "type": "String",
        "value-key": "[SEED_MASK]",
        "default-value": "None",
        "optional": true
    },
    {
        "id": "n_seeds",
        "name": "n seeds",
        "type": "Number",
        "integer": true,
        "value-key": "[N_SEEDS]",
        "minimum": 1,
        "default-value": 1,
        "optional": true
    },
    {
        "id": "random_seeds",
        "name": "random seeds",
        "type": "String",
        "value-key": "[RANDOM_SEEDS]",
        "value-choices": ["false", "true"],
        "default-value": "false",
        "optional": true
    },
    {
        "id": "stop_mask",
        "name": "stop mask",
        "type": "String",
        "value-key": "[STOP_MASK]",
        "default-value": "None",
        "optional": true
    },
    {
        "id": "stop_threshold",
        "name": "stop threshold",
        "type": "Number",
        "integer": true,
        "value-key": "[STOP_THRESHOLD]",
        "minimum": 0,
        "default-value": 0,
        "optional": true
    },
    {
        "id": "step_size",
        "name": "step size",
        "type": "Number",
        "value-key": "[STEP_SIZE]",
        "minimum": 0.0,
        "default-value": 0.5,
        "optional": true
    },
    {
        "id": "min_length",
        "name": "min length",
        "type": "Number",
        "integer": true,
        "value-key": "[MIN_LENGTH]",
        "minimum": 1,
        "default-value": 10,
        "optional": true
    },
    {
        "id": "max_length",
        "name": "max length",
        "type": "Number",
        "integer": true,
        "value-key": "[MAX_LENGTH]",
        "default-value": 1000,
        "optional": true
    },
    {
        "id": "odf_model",
        "name": "odf model",
        "type": "String",
        "value-key": "[ODF_MODEL]",
        "value-choices": ["DTI"],
        "default-value": "DTI",
        "optional": true
    },
    {
        "id": "wm_labels",
        "name": "wm labels",
        "type": "Number",
        "integer": true,
        "list": true,
        "min-list-entries": 1,
        "list-separator": ", ",
        "value-key": "[WM_LABELS]",
        "value-choices": [250, 251, 252, 253, 254, 255, 41, 2, 16, 77],
        "default-value": [250, 251, 252, 253, 254, 255, 41, 2, 16, 77],
        "optional": true
    },
    {
        "id": "dask_it",
        "name": "dask it",
        "type": "String",
        "value-key": "[DASK_IT]",
        "value-choices": ["false", "true"],
        "default-value": "false",
        "optional": true
    }
    ],
    "output-files": [
    {
        "id": "config_file",
        "name": "Configuration file",
        "value-key": "[CONFIG_FILE]",
        "path-template": "config.toml",
        "file-template": [
            "[files]",
            "dmriprep_path = '[DMRIPREP_PATH]'",
            "",
            "[bundles]",
            "bundles = ['[BUNDLES]']",
            "seg_algo = '[SEG_ALGO]'",
            "scalars_model = '[SCALARS_MODEL]'",
            "scalars = ['[SCALARS]']",
            "",
            "[tracking]",
            "directions = '[DIRECTIONS]'",
            "max_angle = [MAX_ANGLE]",
            "sphere = [SPHERE]",
            "seed_mask = [SEED_MASK]",
            "n_seeds = [N_SEEDS]",
            "random_seeds = [RANDOM_SEEDS]",
            "stop_mask = [STOP_MASK]",
            "stop_threshold = [STOP_THRESHOLD]",
            "step_size = [STEP_SIZE]",
            "min_length = [MIN_LENGTH]",
            "max_length = [MAX_LENGTH]",
            "odf_model = '[ODF_MODEL]'",
            "wm_labels = [[WM_LABELS]]",
            "",
            "[segmentation]",
            "nb_points = false",
            "seg_algo = 'AFQ'",
            "progressive = true",
            "greater_than = 50",
            "rm_small_clusters = 50",
            "model_clust_thr = 40",
            "reduction_thr = 40",
            "refine = false",
            "pruning_thr = 6",
            "b0_threshold = 0",
            "prob_threshold = 0",
            "rng = None",
            "return_idx = false",
            "filter_by_endpoints = true",
            "dist_to_aal = 4",
            "",
            "[cleaning]",
            "n_points = 100",
            "clean_rounds = 5",
            "distance_threshold = 5",
            "length_threshold = 4",
            "min_sl = 20",
            "stat = 'mean'",
            "return_idx = false",
            "",
            "[compute]",
            "dask_it = [DASK_IT]",
            ""
            ]
        }
    ]
}